import g18n
import g18n/translations

pub fn main() {
  // Test generated English translator
  let assert Ok(en_translator) = translations.en_translator()
  let greeting = g18n.translate(en_translator, "hello")

  // Test generated Spanish translator  
  let assert Ok(es_translator) = translations.es_translator()
  let greeting_es = g18n.translate(es_translator, "hello")

  // Test generated French translator (from nested JSON)
  let assert Ok(fr_translator) = translations.fr_translator()
  let save_button = g18n.translate(fr_translator, "ui.button.save")

  // Test pluralization with generated translations
  let item_singular = g18n.translate_plural(en_translator, "item", 1)
  let items_plural = g18n.translate_plural(en_translator, "item", 5)

  assert greeting == "Hello"
  assert greeting_es == "Hola"
  assert save_button == "Sauvegarder"
  assert item_singular == "1 item"
  assert items_plural == "5 items"
}
